@model IEnumerable<LessPollu.MVC.Models.RelatorioEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-success fst-italic fw-bold mt-5 mb-3">Relatorio</h1>

<p>
    <a class="btn btn-outline-success fw-bold" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dataGeracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodoCobertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Metricas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dataGeracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.periodoCobertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Metricas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
